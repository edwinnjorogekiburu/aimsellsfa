<% provide(:title,"Edit location type") %>
<div class="row">
  <aside class="span4">
    <section>
     <%= render "shared/employee_side_menu" %>  
    </section>
  </aside>
<div class="span8"> 
<h2>Edit location type</h2>
<p><%= link_to "All item categories" , item_categories_path %></p>
<%= form_for(@location_type) do |f| %>
      <%= render partial: 'shared/error_messages' , :locals => { :object => @location_type }%>

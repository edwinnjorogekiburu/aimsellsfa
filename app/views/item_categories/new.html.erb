<% provide(:title,"Add item category") %>
<div class="row">
  <aside class="span4">
    <section>
     <%= render "shared/employee_side_menu" %>  
    </section>
  </aside>
<div class="span8"> 

<h2>Create new item category</h2>
<p><%= link_to "All item categories" , item_categories_path %></p>
<%= form_for(@item_category) do |f| %>
      <%= render partial: 'shared/error_messages' , :locals => { :object => @item_category }%>
      <%= render partial: "item_category_fields" , :locals => {:f => f } %>
      <%= f.submit "Create new item category", class: "btn btn-large btn-primary" %>
<% end %>
</div>
</div>
</div>
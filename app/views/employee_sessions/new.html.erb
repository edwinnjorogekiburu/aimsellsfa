<% provide(:title, "Sign in") %>
<h2>Employee Sign In</h2>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(:employee_session, url: employee_sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>
  <p>
  		<%= link_to "Forgot your password/Reset password" , "#"  %>
  </p>

  </div>
</div>
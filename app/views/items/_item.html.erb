<tr>
<td><%= link_to "#{item.name}" , edit_item_path(item) , title: "Click to edit #{item.name}"%></td>
<td><%= item.description %></td>
<td><%= number_to_currency(item.price , :unit => " Kshs. ") %></td>
<td><%= number_to_currency(item.retail_price , :unit => " Kshs. ") %></td>
<td><%= link_to "Issue stock to agent" , "#" %></td>
<td><%= link_to "Delete Item" , item_path(item) ,
	 method: :delete, data: { confirm: "Are you sure you want to delete #{item.name}?" } %></td>
</tr>
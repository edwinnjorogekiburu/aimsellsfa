<% provide(:title,"Edit item") %>
<div class="row">
  <aside class="span4">
    <section>
     <%= render "shared/employee_side_menu" %>  
    </section>
  </aside>
<div class="span8"> 
<p><%= link_to "All items" , items_path %></p>
<h2>Edit item</h2>
<%= form_for(@item) do |f| %>
      <%= render partial: 'shared/error_messages' , :locals => { :object => @item }%>
      <%= render partial: "item_fields" , :locals => {:f => f } %>
      <%= f.submit "Save changes ", class: "btn btn-large btn-primary" %>
<% end %>
</div>
</div>
</div>
